# Link generation page access password (required)
GENERATE_PAGE_PASSWORD=your-strong-password-here

# AES encryption keys (required, recommended: 32+ characters)
# Main encryption key
ENCRYPTION_KEY=your-32-character-encryption-key-here
# Redirect encryption key
REDIRECT_ENCRYPTION_KEY=your-32-character-redirect-encryption-key-here
# Encryption key for /c/ route
C_ENCRYPTION_KEY=your-32-character-c-encryption-key-here
# Encryption key for /r/ route
R_ENCRYPTION_KEY=your-32-character-r-encryption-key-here

# JWT signing secret (required, recommended: 32+ characters)
JWT_SECRET=your-32-character-jwt-secret-key-here

# XOR obfuscation key (optional)
OBFUSCATION_KEY=your-obfuscation-key-here

# HMAC secret keys for secure signatures
# Base HMAC secret (optional, used as fallback if route-specific keys are not set)
HMAC_SECRET=your-32-character-hmac-secret-key-here
# HMAC secret for /c/ route (optional, recommended: 32+ characters)
C_HMAC_SECRET=your-32-character-c-hmac-secret-key-here
# HMAC secret for /r/ route (optional, recommended: 32+ characters)
R_HMAC_SECRET=your-32-character-r-hmac-secret-key-here
# HMAC signature expiration time in seconds (optional, default: 300)
HMAC_EXPIRATION=300

# JWT session timeout in seconds (optional, default: 3600)
SESSION_TIMEOUT=3600

# Redirection settings
# Default redirect delay in milliseconds (optional, default: 3000)
DEFAULT_DELAY=3000

# Risk check settings
# Enable risk checking (optional, default: true)
ENABLE_RISK_CHECK=true
# Risk check delay in milliseconds (optional, default: 2000)
RISK_CHECK_DELAY=2000

# Unified redirect settings
# Enable unified redirect behavior (optional, default: true)
ENABLE_UNIFIED_REDIRECT=true
# Unified redirect delay in milliseconds (optional, default: 3000)
UNIFIED_REDIRECT_DELAY=3000

# Referer checking settings
# Enable Referer checking (optional, default: true)
ENABLE_REFERER_CHECK=true
# Enable delayed redirection (optional, default: true)
ENABLE_DELAY=true

# Domain restrictions
# Allowed target domains, comma-separated (optional, leave empty to allow all)
ALLOWED_DOMAINS=example.com,example.org
# Allowed source domains, comma-separated (optional, leave empty to disable checking)
ALLOWED_REFERERS=yourdomain.com,app.yourdomain.com
# Domains where Referer checking is skipped, comma-separated (optional)
NO_REFERER_CHECK_DOMAINS=public-site.com
# Domains allowing empty Referer, comma-separated (optional)
ALLOW_EMPTY_REFERER_DOMAINS=direct-access.com

# Statistics settings
# Statistics webhook URL (optional)
WEBHOOK_URL=https://your-webhook.com/api/stats
# KV namespace for redirect statistics (required for stats functionality)
REDIRECT_STATS=your-kv-namespace-id-here

# Notes:
# 1. Copy this file as .dev.vars for local development
# 2. Configure production environment variables in Cloudflare Pages Dashboard
# 3. Do not commit files containing real keys to Git
# 4. For production, always use strong, unique keys for all encryption and signing variables
# 5. The KV namespace (REDIRECT_STATS) must be created in Cloudflare Dashboard before use
